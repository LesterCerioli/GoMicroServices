info(
	title: 空中课堂
	desc: 秋季版本
	author: luliangbin
	email: @xiaoheiban.cn
	version: 2.0
)

type (
	ShowTipRequest {
		Token string `path:"token,optional"`
	}
	ShowTipResponse {
		Region string `json:"region"` // 用户地区，如果不需要弹窗，就直接返回空
		Show   bool   `json:"show"`   // 需要弹窗
	}
)

@server(
	jwt: Auth
	signature: Auth
)
service shedu-api {
	@doc(
		summary: 判断用户需要弹窗
	)
	@server(
		handler: ShowAirTipHandler
	)
	get /shedu/user/tip(ShowTipRequest) returns(ShowTipResponse)
}